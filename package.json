  "license": "MIT",
  "source": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bunx unbuild",
    "watch": "bunx unbuild watch",
    "test": "bun test",
    "bump": "npm version patch --no-git-tag-version",
