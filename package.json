      "require": "./dist/client/index.cjs",
      "types": "./dist/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.cjs",
      "types": "./dist/server/index.d.ts"
    }
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0"
