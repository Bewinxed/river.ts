{
  "version": "0.0.64",
  "name": "river.ts",
  "description": "Composable, declarative, and type-safe SSE Server-Sent Events",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bewinxed/river.ts.git"
  },
  "homepage": "https://me.bewinxed.com/projects/river.ts",
